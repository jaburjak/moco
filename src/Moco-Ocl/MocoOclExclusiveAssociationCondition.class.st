"
Represents an OCL invariant condition generated by a transformation of a phase partition using exclusive phase associations.
"
Class {
	#name : #MocoOclExclusiveAssociationCondition,
	#superclass : #MocoOclInvariant,
	#instVars : [
		'associations'
	],
	#category : #'Moco-Ocl-Model'
}

{ #category : #accessing }
MocoOclExclusiveAssociationCondition >> associations [
	^ associations
]

{ #category : #intialization }
MocoOclExclusiveAssociationCondition >> initialize [
	super initialize.
	
	associations := OrderedCollection new
]

{ #category : #printing }
MocoOclExclusiveAssociationCondition >> printOclTo: aStream [
	super printOclTo: aStream.
	
	aStream
		nextPutAll: (' XOR ' join: (associations collect: [ :each |
			| conditions |
			conditions := each collect: [ :e | 'self.' , (e name) , ' <> OclVoid' ].
			
			((conditions size) > 1)
				ifTrue: [ '(' , (' AND ' join: conditions) , ')' ]
				ifFalse: [ conditions first ]
		]))
]
